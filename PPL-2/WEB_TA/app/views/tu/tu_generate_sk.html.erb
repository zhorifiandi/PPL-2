    <h1> LIST DAFTAR USER </h1>

	<% success = params[:success] %>
	<% if (success != nil) %>
		 <% if (success == '1')%>
			<div class='success'> Your update is succeed </div>
		 <% elsif (success == '0') %>
			<div class='fail'> Your update is failed </div>
		 <% elsif (success == '2') %>
			<div class='success'> Your deletion is succeed </div>
		 <% elsif (success == '3') %>
			<div class='fail'> Your deletion is failed </div>
		 <% end %>
	<% end %>

	<%= form_tag("/tu/tu_generate_sk", method: "post") do %>
    <center>
      <input name="nomor_sk" id="nomor_sk" placeholder="" type="text" value="Nomor SK">
      <input name="nip_kaprodi" id="nip_kaprodi" placeholder="" type="text" value="NIP Kaprodi">
      <input name="nim_mhs" id="nim_mhs" placeholder="" type="text" value="NIM Mahasiswa">
      <%= submit_tag("SIMPAN", :class => "button-search") %>
    </center>
  <% end %>

