                  <%= f.label :password, style: "color: #284f27" %>
                  <%= f.password_field :password, class:"login-input" %>

                  <%= f.submit "LOGIN", class: "button-submit" , style:"width: 80px; height: 40px; margin-top: 10px; margin-bottom: 0; font-size: 12pt; padding: 0 auto;"%>
                <% end %>
              </div>
              </div>

