				    },
				    content: function() {
				      return $('#popover_content_wrapper').html();
				    }
				  });
				});
				</script>
            <li id="loginpop" data-toggle="popover" data-placement="bottom">LOGIN</li>
            <div id="popover_title_wrapper" style="display: none;">
        			  <div><p style="color: black;">Login</p></div>
        			</div>
              <div id="popover_content_wrapper" style="display: none;">
